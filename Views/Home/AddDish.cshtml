@model Dish
@{
    ViewData["Title"] = "New Dish";
}

<h1 class="display-4">Add a Dish!</h1>
<hr/>
<form asp-action="AddDishToDB" asp-controller="Home" method="post" class="form align-items-center">
<div class="row">
    <div class="col-md-6">
        <div class="form-group">
            <label asp-for="DishName"></label>
            <span class="text-danger font-weight-bold" asp-validation-for="DishName"></span>
            <input class="form-control" asp-for="DishName" />
        </div>
        <div class="form-group">
            <label asp-for="Calories"></label>
            <span class="text-danger font-weight-bold" asp-validation-for="Calories"></span>
            <input class="form-control" asp-for="Calories" min="0"/>
        </div>
        <div class="form-group">
            <label asp-for="Tastiness"></label>
            <span class="text-danger font-weight-bold" asp-validation-for="Tastiness"></span>
            <select class="form-control" asp-for="Tastiness" >
                <option value="1">1</option>
                <option value="2">2</option>
                <option value="3">3</option>
                <option value="4">4</option>
                <option value="5">5</option>
            </select>
        </div>
    </div>
    <div class="col-md-6">
        <div class="form-group">
            <label asp-for="ChefId"></label>
            <span class="text-danger font-weight-bold" asp-validation-for="ChefId"></span>
            <select class="form-control" asp-for="ChefId" >
                @foreach (Chef chef in ViewBag.ChefOptions)
                {
                    <option value="@chef.ChefId">@chef.FirstName @chef.LastName</option>
                }
            </select>
        </div>
        <div class="form-group">
            <label asp-for="Description"></label>
            <span class="text-danger font-weight-bold" asp-validation-for="Description"></span>
            <textarea class="form-control" asp-for="Description" ></textarea>
        </div>
        <button type="submit">Add Chef</button>
    </div>
</form>
</div>

